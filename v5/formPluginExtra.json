{
  "grid": [{ "id": "p1", "xs": 12, "class": "main", "table": "unitextTable", "height": "fill" }],
  "spacing": 10,
  "breadcrumbs": { "tree": "plugins" },

  "p1": [
    {
      "title": "",
      "type": "table",
      "prop": "unitextTable",
      "popupenable": true,

      "columns": [
        {
          "prop": "request",
          "title": "Входящее от контроллера MegaD",
          "type": "input",
          "width": 250
        },
        {
          "prop": "response",
          "title": "Передать в ответ",
          "type": "input",
          "hide": "data.mcp",
          "width": 80
        },
        {
          "prop": "state",
          "title": "Установить состояние каналов",
          "type": "input",
          "width": 150
        },
        {
          "prop": "fullurl",
          "title": "Выполнить запрос (в т.ч. на другой MegaD)",
          "type": "input",
          "hide": "data.mcp",
          "width": 150
        },
        {
          "prop": "mcp",
          "title": "MCP (одновременная сработка)",
          "type": "cb",
          "width": 100
        },
        {
          "prop": "startscene",
          "title": "Запустить сценарий",
          "type": "droplist",
          "data": [{ "id": "-", "title": "-" }],
          "width": 100
        },
        {
          "prop": "arg",
          "title": "Параметр сценария",
          "type": "input",
          "hide": "!data.startscene",
          "width": 100
        }
